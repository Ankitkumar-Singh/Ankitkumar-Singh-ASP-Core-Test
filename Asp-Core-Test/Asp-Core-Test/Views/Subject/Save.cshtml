@model Asp_Core_Test.Models.PhdSubject

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Add/Edit the subject *@
<ol class="breadcrumb my-4">
    <li class="breadcrumb-item"><a asp-controller="Student" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-action="Index" class="breadcrumb-item">Subject</a></li>
    <li class="breadcrumb-item active">Save Student Details</li>
</ol>

<div class="card border-primary">
    <div class="col-md-6 card-body offset-3">
        <div class="form-horizontal">
            <div class="text-center">
                <img src="~/images/subject-edit.png" class="delete-img" />
                <h3 class="text-center font-weight-bold text-dark my-4">Save Subject</h3>
            </div>
            <hr />
            <form asp-action="Save">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Subject</label>
                    <input asp-for="Name" class="form-control" maxlength="50" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Description</label>
                    <textarea asp-for="Description" class="form-control" maxlength="150"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary float-right" />
                    <a asp-action="Index" class="btn btn-warning float-left">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
