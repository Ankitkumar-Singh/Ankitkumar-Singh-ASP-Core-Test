<!DOCTYPE html>
<html>
@* Common layout for various views *@
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Management</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    @* Navbar contains links for navigation purpose *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand font-weight-bold text-capitalize" href="/student/index">
                <img class="nav-brand-img" src="~/images/school.png" />
                Student Management
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMenu" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMenu">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="ml-5 text-capitalize font-weight-bold nav-link" href="/Student/Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="mx-3 text-capitalize font-weight-bold nav-link" href="/Subject/Index">Subject <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0" asp-controller="Student" asp-action="Index" method="post">
                    <input type="text" name="search" id="search" class="form-control mr-sm-2" placeholder="Search student" />
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer class="text-center">
        <p>&copy; 2019 - Student Management </p>
    </footer>
    <script src="~/javascript/jquery.min.js"></script>
    <script src="~/javascript/jquery.validate.min.js"></script>
    <script src="~/javascript/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/javascript/bootstrap.min.js"></script>
</body>
</html>